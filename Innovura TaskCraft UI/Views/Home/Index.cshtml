<style>
    .circle {
        width: 10px;
        height: 10px;
        border-radius: 50%;
    }
</style>

<div class="container">
    <div class="row action-bar">
        <button id="createAction" type="button" class="btn btn-danger btn-circle btn-xl">
            <i class="fa fa-plus"></i>
        </button>
        <select class="form-select form-select-sm" aria-label="Select Action" id="selectedAction" >
            <option selected>Select Action</option>
            <option value="1">Task</option>
            <option value="2">Label</option>
        </select>
    </div>
    <div class="row">

        <table id="example" class="table table-striped" style="width:100% ; margin: 0px 15px;">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>State</th>
                    <th>Label</th>
                    <th>Created Date</th>
                    <th>Start date</th>
                    <th>End Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                
                
            </tbody>
            <tfoot>
                <tr>
                    <th>Name</th>
                    <th>State</th>
                    <th>Label</th>
                    <th>Created Date</th>
                    <th>Start date</th>
                    <th>End Date</th>
                    <th>Actions</th>
                </tr>
            </tfoot>
        </table>
    </div>
</div>


<!-- Delete Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Delete Task</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete the task with the title: <strong id="deleteTaskTitle"></strong>? <strong id="deleteTask" hidden></strong>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" id="confirmDelete" class="btn btn-danger">Yes, Delete</button>
            </div>
        </div>
    </div>
</div>

<!-- Create Task Modal -->
<div class="modal" tabindex="-1" id="createTask">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Create Task</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="taskName">Task Name:</label>
                            <input type="text" class="form-control" id="taskName" placeholder="Enter task name" required />
                        </div>

                        <div class="form-group col-md-6">
                            <label for="state">State:</label>
                            <select class="form-control" id="state" disabled>
                                <option value="New" selected>New</option>
                                <option value="In Progress">In Progress</option>
                                <option value="Completed">Completed</option>
                            </select>
                        </div>
                    </div>
                    @*
                    <div class="form-group">
                    <label for="createdDate">Created Date:</label>
                    <input type="date" class="form-control" id="createdDate" />
                    </div> *@

                    <div class="form-group">
                        <label for="startedDate">Start Date:</label>
                        <input type="date" class="form-control" id="startedDate" />
                    </div>

                    <div class="form-group">
                        <label for="endDate">End Date:</label>
                        <input type="date" class="form-control" id="endDate" />
                    </div>

                    <div class="form-group">
                        <select class="form-control" id="cratemyLabels">
                            <option value="N/A" selected>N/A</option>  
                        </select>
                        
                    </div>

                    @* <div class="form-row" id="newLabel" style="display:none">
                        <div class="form-group col-md-6">
                            <label for="timeHours">Hours:</label>
                            <input type="number" id="timeHours" class="form-control" min="0" max="23" step="1" required>

                        </div>

                        <div class="form-group col-md-6">
                            <label for="exampleColorInput" class="form-label">Label Color</label>
                            <input type="color" class="form-control form-control-color" id="exampleColorInput" value="#563d7c" title="Label color">
                        </div>
                    </div> *@

                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" data-bs-dismiss="modal" id="createTaskButton">Create Task</button>
            </div>
        </div>
    </div>
</div>
<!-- Create Label Model -->
<div class="modal" tabindex="-1" id="createLabel">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Create Task</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form>
                    
                    <div class="form-group">
                        <input type="text" class="form-control" id="newLabel" placeholder="Enter label name"  required/>
                    </div>

                    <div class="form-row" id="newLabel">
                        <div class="form-group col-md-6">
                            <label for="timeHours">Hours:</label>
                            <input type="number" id="timeHours" class="form-control" min="0" max="23" step="1" required>

                        </div>

                        <div class="form-group col-md-6">
                            <label for="exampleColorInput" class="form-label">Label Color</label>
                            <input type="color" class="form-control form-control-color" id="exampleColorInput" value="#563d7c" title="Label color">
                        </div>
                    </div>

                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" data-bs-dismiss="modal" id="createLabelButton">Create Task</button>
            </div>
        </div>
    </div>
</div>



<!-- Update Modal -->
<div class="modal" tabindex="-1" id="updateTask">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Update Task</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="updatetaskName">Task Name:</label>
                            <input type="text" class="form-control" id="updatetaskName" placeholder="Enter task name" />
                        </div>

                        <div class="form-group col-md-6">
                            <label for="updatestate">State:</label>
                            <select class="form-control" id="updatestate">
                                <option value="New" selected>New</option>
                                <option value="In Progress">In Progress</option>
                                <option value="Completed">Completed</option>
                            </select>
                        </div>
                    </div>

                    <div class="form-group" hidden>
                        <label for="updatecreatedDate">Created Date:</label>
                        <input type="date" class="form-control" id="updatecreatedDate" disabled />
                    </div>

                    <div class="form-group">
                        <label for="updatestartedDate">Start Date:</label>
                        <input type="date" class="form-control" id="updatestartedDate" />
                    </div>

                    <div class="form-group">
                        <label for="updateendDate">End Date:</label>
                        <input type="date" class="form-control" id="updateendDate" />
                    </div>

                    <div class="form-group">
                        <label for="Labels">Label:</label>
                        
                        <select class="form-control" id="updatemyLabels">
                        </select>
                    </div>


                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" data-task-name="" data-task-id="" id="UpdateTaskButton">Update Task</button>
            </div>
        </div>
    </div>
</div>

<script src="~/js/TaskCraft.js" asp-append-version="true"></script>
<script>
    $(document).ready(function () {
        var table = $('#example').DataTable({
            lengthChange: false,
            buttons: ['copy', 'excel', 'pdf', 'colvis']
        });

        table.buttons().container()
            .appendTo('#example_wrapper .col-md-6:eq(0)');
    });
</script>
